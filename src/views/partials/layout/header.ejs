<header class="">
  <div class="container">
    <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 border-bottom">
      <div class="col-md-3 mb-2 mb-md-0">
        <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none h1"> Readr </a>
      </div>

      <form class="col-12 col-lg-6 mb-3 mb-lg-0 justify-content-center" role="search">
        <input type="search" class="form-control w-100" placeholder="Search..." aria-label="Search" />
      </form>

      <% if (user) { %>
      <div class="dropdown text-end">
        <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center" style="width: 32px; height: 32px">
            <span class="text-uppercase fw-bold"><%= user.fullName.charAt(0) %></span>
          </div>
        </a>
        <ul class="dropdown-menu text-small">
          <li><a class="dropdown-item" href="/dashboard/home">Dashboard</a></li>
          <li><a class="dropdown-item" href="/dashboard/create-article">New article</a></li>
          <li><hr class="dropdown-divider" /></li>
          <li><a class="dropdown-item" href="/auth/logout">Sign out</a></li>
        </ul>
      </div>
      <% } else { %>
      <div class="col-md-3 text-end">
        <a href="auth/login" role="button" class="btn btn-outline-primary me-2">Login</a>
        <a href="auth/register" role="button" class="btn btn-primary">Become a writer</a>
      </div>
      <% } %>
    </nav>
  </div>
  <nav class="py-2 border-bottom">
    <div class="container d-flex flex-wrap">
      <ul class="nav me-auto">
        <li class="nav-item"><a href="#" class="nav-link link-body-emphasis px-2 active" aria-current="page">Home</a></li>
        <li class="nav-item"><a href="#" class="nav-link link-body-emphasis px-2">About</a></li>
      </ul>
    </div>
  </nav>
</header>
