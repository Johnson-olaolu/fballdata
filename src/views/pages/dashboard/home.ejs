<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Dashboard | Readr</title>
    <%- include('../../partials/common/head.ejs'); %>
  </head>
  <body>
    <%- include('./layout/dashboard-header', {user}); %>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
          <div class="position-sticky pt-3">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link active" href="#"> Dashboard </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"> Teams </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"> Players </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"> Statistics </a>
              </li>
            </ul>
          </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Dashboard</h1>
          </div>

          <!-- Dashboard cards -->
          <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="h5 mb-0 font-weight-bold">Total Teams</div>
                  <div class="h2"><%= typeof totalTeams !== 'undefined' ? totalTeams : '0' %></div>
                </div>
              </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                  <div class="h5 mb-0 font-weight-bold">Total Players</div>
                  <div class="h2"><%= typeof totalPlayers !== 'undefined' ? totalPlayers : '0' %></div>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
